# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=contributor_intelligence
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Activity Analysis
ACTIVITY_WINDOW_DAYS=90
WEEKS_IN_90_DAYS=13
MIN_HOURS_ACTIVE=1.0
TOP_PROJECTS_COUNT=5
DB_BATCH_SIZE=100

# LLM Configuration
# Recommended models for 8GB RAM:
# - llama3.2:3b (3B params, fast, good quality)
# - qwen2.5:7b-instruct-q4_0 (7B params quantized, better quality)
# - qwen2.5:3b (3B params, fast)
OLLAMA_MODEL=qwen2.5:7b-instruct-q4_0
OLLAMA_BASE_URL=http://localhost:11434
MAX_TOKENS=256
TEMPERATURE=0.3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Application
APP_ENV=development
